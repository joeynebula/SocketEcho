<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_centerHorizontal="true"
            android:text="Start !"
            android:textSize="17sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.088"/>


    <EditText
            android:id="@+id/output"
            android:layout_width="312dp"
            android:layout_height="397dp"
            android:layout_below="@id/start"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:inputType="none"
            android:focusable='false'
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintTop_toBottomOf="@+id/button" android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="44dp"/>

    <AutoCompleteTextView
            android:hint="Echo text"
            android:layout_width="345dp"
            android:layout_height="51dp"
            android:id="@+id/inputTextTv" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/start" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
    />
    <Button
            android:text="Send"
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendBt"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/inputTextTv" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="161dp" android:layout_marginEnd="162dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>

</android.support.constraint.ConstraintLayout>